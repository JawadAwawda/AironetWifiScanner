<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="?attr/colorSurface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- SSID -->
            <TextView
                android:id="@+id/dialogSsid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network SSID"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <!-- BSSID -->
            <TextView
                android:id="@+id/dialogBssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:11:22:33:44:55"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp" />

            <!-- General Info Section -->
            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Strength"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />
                    <TextView
                        android:id="@+id/dialogSignal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="-55 dBm"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Quality"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />
                    <TextView
                        android:id="@+id/dialogSignalQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Good"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/signal_good" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequency"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/dialogFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5180 MHz (5 GHz)"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/dialogChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="36"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />
                
            <!-- Protocol Section -->
            <TextView
                android:id="@+id/headerProtocol"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protocol"
                android:layout_marginTop="16dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi Standard"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/dialogStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="802.11ac"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Width"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/dialogChannelWidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="80 MHz"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <!-- Aironet Section (hidden by default) -->
            <TextView
                android:id="@+id/headerAironet"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cisco Aironet"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAironet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AP Name"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />
                    <TextView
                        android:id="@+id/dialogApName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="AP-42"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Client Count"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/dialogClientCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AP Load"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/dialogApLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="35%"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Channel Utilization"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/dialogChannelUtilization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15%"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>
